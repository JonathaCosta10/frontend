  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Acesso rápido ao dashboard principal",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Mercado",
      "short_name": "Mercado",
      "description": "Análise de mercado em tempo real",
      "url": "/market",
      "icons": [
        {
          "src": "/icons/shortcut-market.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Orçamento",
      "short_name": "Orçamento",
      "description": "Gerenciamento de orçamento pessoal",
      "url": "/budget",
      "icons": [
        {
          "src": "/icons/shortcut-budget.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "related_applications": [],
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+organizesee",
      "url": "/share?data=%s"
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"],
        "application/vnd.ms-excel": [".xls", ".xlsx"]
      }
    }
  ]
}